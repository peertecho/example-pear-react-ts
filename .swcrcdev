[
  {
    "test": ".*\\.ts$",
    "jsc": {
      "parser": {
        "syntax": "typescript"
      }
    }
  },
  {
    "test": ".*\\.tsx$",
    "jsc": {
      "parser": {
        "syntax": "typescript",
        "jsx": true
      },
      "transform": {
        "react": {
          "runtime": "automatic",
          "development": true,
          "refresh": true
        }
      }
    }
  }
]
